{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "shell",
          "label": "C/C++: g++ build",
          "command": "g++",
          "args": [
              "-g",
              "-o",
              "output",
              "${file}"
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          }
      }
  ]
}
